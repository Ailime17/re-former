<%= form_with model: @user do |f| %>
  <div>
    <%= f.label :username, "Username:" %>
    <%= f.text_field :username, value: "John_Well" %>
  </div>
  <div>
    <%= f.label :email, "Email:" %>
    <%= f.email_field :email, placeholder: "example@example.com" %>
  </div>
  <div>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "Submit" %>
<% end %>